{
  "compilerOptions": {
    "target": "es5", // Escolha de acordo com o ambiente de deploy
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext", // Ou "commonjs" se necessário
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true, // Não emitir arquivos de saída TypeScript
    "jsx": "preserve" // Manter JSX para que o Babel ou webpack faça a transformação
  },
  "include": [
    "src" // Inclui todos os arquivos dentro do diretório "src"
  ]
}
