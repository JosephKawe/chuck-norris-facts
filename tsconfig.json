{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["server/src/*", "client/src/*"]
    }
  },
  "include": ["server/src/**/*", "client/src/**/*"],
  "exclude": ["node_modules"]
}
